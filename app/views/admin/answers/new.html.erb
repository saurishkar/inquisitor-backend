<%= render 'admin/home/header' %>
<div class="container">  
  <h1 class="mb-4">Write an answer</h1>
  <div class="form">
    <%= form_with scope: :answer, url: admin_user_answers_path(:question_id => params[:question_id]), local: true do |form| %>
      <div class="row">
        <div class="col-md-6">
          <p>
            <%= form.label :answer_description %>
            <%= form.text_area :description, :class => 'form-control', :rows => 5 %>
          </p>
          <p>
            <%= form.submit :class => 'btn btn-success' %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>