<%= render 'admin/home/header' %>
<div class="container">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1 class="title">
        <a href="/admin/users/<%= params[:user_id] %>"><%= User.find(params[:user_id]).name %></a> > Questions
      </h1>
    </div>
    <div class="col-md-4">
      <%= link_to 'New Question', new_admin_user_question_path, class: "btn btn-primary float-right" %>
    </div>
  </div>
  <table class="table">
    <% if @questions.length > 0 %>
      <thead>
        <th>#</th>
        <th>Question Title</th>
        <th>Question description</th>
        <th colspan="3">Actions</th>
      </thead>
      <tbody>
        <% @questions.each_with_index do |question, index| %>
          <tr>
            <td>
              <%= index + 1 %>.
            </td>
            <td>
              <%= question.title %>
            </td>
            <td>
              <%= question.description %>
            </td>
            <td>
              <a href="<%= request.path %>/<%= question.id %>">
                View answer
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <h5 class="t-a-c">No Records available<h5>
    <% end %>
  </table>
</div>
