<%= render 'admin/home/header' %>
<div class="container">
  <div class="row mb-4">
    <div class="col-md-8"><h1>Users</h1></div>
    <div class="col-md-4">
      <a href="/admin/users/new" class="btn btn-primary float-right rounded-0">New User</a>
    </div>
  </div>
  <table class="table">
    <thead>
      <th>First Name </th>
      <th>Last Name </th>
      <th>Email Address </th>
      <th colspan="3"></th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td></td>
        <td></td>
        <td><a href="/admin/users/<%= user.id %>">View</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>