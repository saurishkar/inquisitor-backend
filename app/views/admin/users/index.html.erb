<%= render 'admin/home/header' %>
<div class="container">
  <div class="title">
    <h1>Users</h1>
  </div>
  <table class="table">
    <thead>
      <th>First Name </th>
      <th>Last Name </th>
      <th>Email Address </th>
      <th colspan="3"></th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td></td>
        <td></td>
        <td><a href="/admin/users/<%= user.id %>">View</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>