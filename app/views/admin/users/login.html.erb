<%= render 'admin/home/header' %>
<div class="alert-message">
  <%= flash.notice %>
</div>
<%= form_with scope: :user, url: admin_login_path, local: true do |form| %>
  <div class="user-login-form">
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit 'Login' %>
    </div>
  </div>
<% end %> 
