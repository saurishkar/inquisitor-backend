<%= render 'admin/home/header' %>
<div class="container">
  <div class="row">
    <div class="col-md-8 mb-4"><h1>New User</h1></div>
  </div>

  <div class="form">
    <%= form_with scope: :user, url: admin_users_path, local: true do |form| %>
      <div class="errors">
        <% if @user.errors.any? %>
          <% @user.errors.full_messages.each do |msg| %>
            <div class="error-message"><%= msg %></div>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-4 mb-4">
        <%= form.label :firstname, 'First name' %>
        <%= form.text_field :firstname, :class => 'form-control' %>
        </div>
        <div class="col-md-4">
        <%= form.label :lastname, 'Last name' %>
        <%= form.text_field :lastname, :class => 'form-control' %>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-md-8">
        <%= form.label :email %>
        <%= form.text_field :email, :class => 'form-control' %>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-md-4">
        <%= form.label :password %>
        <%= form.password_field :password, :class => 'form-control' %>
        </div>
        <div class="col-md-4">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
      <%= form.submit :class => 'btn btn-success rounded-0' %>
    <% end %>
  </div>
</div>